<div class="card" style="max-width: 100%;">
			<div class="row no-gutters">
			   <div class="col-sm-2">
			    <%= user_avatar(post.user) %>
			    <p class="ml-4">
			    	 <p class="ml-4"><%= link_to post.user.user_name, profile_path(post.user), :class=>"text-dark" %>
			    	<br>
					<small>On forum since: <%= post.user.created_at.strftime('%F') %></small>
					<br>
			    	<small>Posts: <%= post.user.posts.count %></small>
			    </p>

			    </div>
			    <div class="col-sm-10">
			      <div class="card-body">
			        <p class="card-text">#<%=index+1 %>&nbsp;<small class="text-muted"><%= post.created_at.to_formatted_s(:db) %></small></p>
			        <p class="card-text container">
			        <%= simple_format(post.content) %>
			    </p>
			</div>
		</div>
	</div>
</div>