<div class="card" style="max-width: 100%;">
			<div class="row no-gutters">
			   <div class="col-sm-2">
			    <%= image_tag post.user.avatar.url(:discussion), :class=>"img-fluid rounded-circle mt-3 ml-2" %>
			    <p class="ml-4">
			    	 <p class="ml-4"><%= link_to post.user.user_name, profile_path(post.user), :class=>"text-dark" %>
			    	<br>
			    	<small><%= post.user.role %></small><br>
			    	<small>Posts: <%= post.user.posts.count %></small><br>
					<small>On forum since: <%= post.user.created_at.strftime('%F') %></small>	
			    </p>
				</p>

			    </div>
			    <div class="col-sm-10">
			      <div class="card-body" id="<%= index+1 %>">
			        <a href="#<%= index+1 %>" class="card-text text-dark">#<%=index+1 %>&nbsp;<small class="text-muted"><%= post.created_at.to_formatted_s(:db) %></small></a>
			        <p class="card-text container">
			        <%= simple_format(post.content) %>
			       <% if current_user == post.user && post.created_at > 30.minutes.ago && current_user.role != "Banned" %>
			        <%= link_to "Edit Post", edit_post_path(post), :class=>"btn btn-warning btn-md" %>
			        <% end %>
			    </p>
			</div>
		</div>
	</div>
</div>