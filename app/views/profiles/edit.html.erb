<div class="container">
	<h2>Edit My profile</h2>
	<%= simple_form_for @profile do |f| %>
		<%= f.input :age %>
		<%= f.input :location %>
		<%= f.input :website %>
		<%= f.input :twitter %>
		<%= f.input :facebook %>
		<%= f.input :instagram %>
		<%= f.input :description, as: :text %>
		<p>Upload Avatar</p>
		<%= f.file_field :avatar %>
		<br><br><br>
		<%= f.button :submit, "Edit Profile", :class=>"btn btn-lg btn-warning" %>
	<% end %>
</div>