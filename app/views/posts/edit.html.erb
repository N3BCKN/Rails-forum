<div class="container">
	<h3 class="text-muted mt-5" style="border-top: 1px solid lightgrey;">Edit your post from: 
		<%=link_to @post.discussion.name, discussion_path(@post.discussion) %></h3>
	<%= simple_form_for(@post) do |f| %>
		<%= f.input :content, as: :text, :input_html => { 'rows' => 10, 'cols' => 10 }, :label=> "Your Post" %>
		<%= f.button :submit, "Add Reply"  ,:class=>"btn btn-md btn-warning" %>
	<% end %>
</div>