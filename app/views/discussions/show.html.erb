<div class="container">
	<div class=" m-5">
		<div class="p-3">
			<h2 class="text-muted"><%= @discussion.name %></h2>
			<p>By: User  Posted: <%= @discussion.created_at.to_formatted_s(:db) %></p>
		</div>
			<div class="card" style="max-width: 100%;">
			  <div class="row no-gutters">
			    <div class="col-sm-2">
			      <img src="https://dummyimage.com/100x100/000/fff" class="img-fluid rounded-circle mt-3 ml-3" alt="...">
			      <p class="ml-4">User Login</p>
			    </div>
			    <div class="col-sm-10">
			      <div class="card-body">
			        <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
			        <p class="card-text container">
			        		<%= simple_format(@discussion.content) %>
			        </p>
			      </div>
			    </div>
			  </div>
			</div>
			<% @posts.each_with_index do |post, index| %>
				<%= render 'partials/posts', post: post, index: index %>
			<% end %>

			<%= paginate @posts %>
	
			<h4 class="text-muted mt-5" style="border-top: 1px solid lightgrey;">Leave a Reply</h4>
			<%= simple_form_for @post do |f| %>
				<%= f.input :content, as: :text, :input_html => { 'rows' => 10, 'cols' => 10 }, :label=> "Your Post" %>
				<%= f.button :submit, "Add Reply"  ,:class=>"btn btn-md btn-warning" %>
			<% end %>
	</div>
</div>
